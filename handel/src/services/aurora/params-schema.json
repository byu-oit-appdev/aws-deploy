{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "The service type (should always be 'apiaccess')",
            "pattern": "apiaccess",
            "errorMessage": "The 'type' field must equal 'apiaccess'"
        },
        "aws_services": {
            "type": "array",
            "description": "The list of services to which consuming dependencies will be granted read-only access",
            "errorMessage": "The 'aws_services' property must contain a list of one or more strings",
            "items": { "type": "string" }
        }
    },
    "required": ["type"],
    "additionalProperties": false,
    "errorMessage": {
        "additionalProperties": "Invalid/unknown property specified",
        "required": {
            "type": "The top-level 'type' field is required"
        }
    }
}