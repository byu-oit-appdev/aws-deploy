{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "The service type (should always be 'route53zone')",
            "pattern": "^route53zone$",
            "errorMessage": "The 'type' parameter must be 'route53zone'"
        },
        "name": {
            "type": "string",
            "errorMessage": "The 'name' parameter must be a string"
        },
        "private": {
            "type": "boolean",
            "errorMessage": "The 'private' parameter must be a boolean"
        },
        "tags": {
            "type": "object",
            "description": "An arbitrary list of key/value pairs to be added as tags to the service",
            "patternProperties": {
                "^.*$": {
                    "anyOf": [
                        {"type": "string"},
                        {"type": "number"}
                    ]
                }
            },
            "errorMessage": "The 'tags' element must contain 1 or more simple key/value pairs where the values are strings or numbers",
            "additionalProperties": false
        }
        
    },
    "required": [
        "type",
        "name"
    ],
    "additionalProperties": false,
    "errorMessage": {
        "additionalProperties": "Invalid/Unknown property specified",
        "required": {
            "type": "The 'type' field is required",
            "name": "The 'name' field is required"
        }
    }
}