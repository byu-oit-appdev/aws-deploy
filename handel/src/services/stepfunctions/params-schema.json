{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "The service type (should be 'stepfunctions')",
            "pattern": "^stepfunctions$",
            "errorMessage": "The 'type' parameter must be 'stepfunctions'"
        },
        "definition": {
            "type": "string",
            "description": "The 'definition' must be a .yml, .yaml, or .json file",
            "pattern": "\\.json|\\.yml|\\.yaml$",
            "errorMessage": "The 'definition' parameter must have file extension .json, .yml, or .yaml."
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "string",
                "errorMessage": "Each item in the 'dependencies' section must be a string"
            },
            "errorMessage": "The 'dependencies' section must be a string"
        }
    },
    "required": [
        "type",
        "definition"
    ],
    "additionalProperties": false,
    "errorMessage": {
        "required": {
            "type": "The 'type' parameter is required",
            "definition": "The 'definition' parameter is required"
        },
        "additionalProperties": "Invalid/Unknown property specified"
    }
}