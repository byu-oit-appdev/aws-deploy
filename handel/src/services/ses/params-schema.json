{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "The service type (should always be 'ses')",
            "pattern": "^ses$",
            "errorMessage": "The 'type' parameter must equal 'ses'"
        },
        "address": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$",
            "errorMessage": "The 'address' parameter must be a string and a valid email address"
        }
    },
    "required": ["type", "address"],
    "additionalProperties": false,
    "errorMessage": {
        "additionalProperties": "Invalid/Unknown property specified",
        "required": {
            "type": "The 'type' field is required",
            "address": "The 'address' field is required"
        }
    }
}