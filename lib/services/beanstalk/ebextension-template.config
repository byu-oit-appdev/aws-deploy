files:
  "/home/ec2-user/handel-startup.sh" :
    mode: "000755"
    owner: root
    group: root
    content: |
      set -ux
      echo "Running startup script generated by Handel to wire up service dependencies"
      {{#each dependencyScriptLines}}
      {{{this}}}
      {{/each}}
      echo "Finished Handel-generate startup script"

commands:
  runstartupscript:
    command: ./handel-startup.sh
    cwd: /home/ec2-user
